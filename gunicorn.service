[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=bossbara
Group=bossbara
WorkingDirectory=/home/bossbara/app/src
Environment="PATH=/home/bossbara/app/venv/bin"
EnvironmentFile=/home/bossbara/.env
ExecStart=/home/bossbara/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target